<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ListView
        android:id="@+id/main_listview_notes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:id="@+id/main_layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/main_btn_newnote"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/outline_note_add_black_48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:onClick="createNewNote"
            />

        <Button
            android:id="@+id/main_btn_newtdlist"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:background="@drawable/outline_list_black_48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="60dp"
            android:onClick="navigateToTasker"
            />

    </RelativeLayout>
</RelativeLayout>